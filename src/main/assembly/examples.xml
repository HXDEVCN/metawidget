				<exclude>WEB-INF/**</exclude>
			</excludes>
			<outputDirectory>/examples/java/gwt/clientside</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>examples/java/swing/addressbook/target/lib</directory>
			<outputDirectory>/examples/java/swing/lib</outputDirectory>
