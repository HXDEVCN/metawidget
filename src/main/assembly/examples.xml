				<include>/gwt/clientside/war/index.html</include>
			</includes>
			<excludes>
				<exclude>.*</exclude>
				<exclude>**/target/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>examples/js/angularjs/addressbook/target/addressbook-angularjs</directory>
